!!!
%html{:lang => 'en-GB'}
  %head
    %title jerseypropertyservices.com
    %meta{content: 'text/html; charset=utf-8', 'http-equiv' => 'Content-Type'}
    %link{href: 'https://cdn.datatables.net/v/bs4-4.1.1/jq-3.3.1/dt-1.10.18/b-1.5.2/cr-1.5.0/sc-1.5.0/sl-1.2.6/datatables.min.css', rel: 'stylesheet', type: 'text/css'}/
    %script{src: 'https://cdn.datatables.net/v/bs4-4.1.1/jq-3.3.1/dt-1.10.18/b-1.5.2/cr-1.5.0/sc-1.5.0/sl-1.2.6/datatables.min.js', type: 'text/javascript'}
    %script{src: '/draw_apps_table.js', type: 'application/javascript'}
    %script{src: '/moment-2.22.2.min.js', type: 'application/javascript'}
    %script{src: 'https://cdn.datatables.net/plug-ins/1.10.19/dataRender/datetime.js', type: 'text/javascript'}
    %link{rel: 'stylesheet', href: '/site.css'}
  %body
    = haml :_navigation
    .container-fluid
    - if @msg
      - if @msg[:success]
        .alert.alert-success{role: 'alert', 'data-dismiss' => 'alert'}
          %strong
            = @msg[:success]
      - if @msg[:failure]
        .alert.alert-danger{role: 'alert', 'data-dismiss' => 'alert'}
          %strong
            = @msg[:failure]
    .container-fluid.site
      = yield
    %ul.navbar.fixed-bottom
      %p.copyright &copy; 2018 jerseypropertyservices.com
    :javascript
      $(function(){
        $(".alert").fadeOut(4000);
      });
